<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/marcoFondoInformes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#000000"
    tools:context=".ActividadInformes">

    <ImageView
        android:id="@+id/imagenFondoInfomres"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fondo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contenedorGeneralInformes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloInformes"
                style="@style/tituloNegrita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informes"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tituloResultadoInformes"
                style="@style/negrita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Resultado"
                android:textAlignment="gravity" />

            <com.echo.holographlibrary.BarGraph
                android:id="@+id/graphBarPrimera"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:id="@+id/contenedorTextoPrimero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textoFacturacionInformes"
                    style="@style/negrita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1.05"
                    android:text="@string/facturacion"
                    android:textAlignment="gravity" />

                <TextView
                    android:id="@+id/textoComprasInformes"
                    style="@style/negrita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.25"
                    android:text="Gastos" />

                <TextView
                    android:id="@+id/textoBeneficioInformes"
                    style="@style/negrita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="Beneficio" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                style="@style/negrita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:text="FacturaciÃ³n de venta"
                android:textAlignment="gravity" />

            <com.echo.holographlibrary.BarGraph
                android:id="@+id/graphBarSegunda"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:id="@+id/contenedorTextoSegundo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textoFacturadoInformes"
                    style="@style/negrita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1.05"
                    android:text="Facturado" />

                <TextView
                    android:id="@+id/textoCobradoInformes"
                    style="@style/negrita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.2"
                    android:text="Cobrado" />

                <TextView
                    android:id="@+id/textoPendienteInformes"
                    style="@style/negrita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/pendiente" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageButton
                    android:id="@+id/botonIrAInicioDesdeInformes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/casa" />

                <ImageButton
                    android:id="@+id/botonIrACatalogoDesdeInformes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/libro" />

                <ImageButton
                    android:id="@+id/botonIrACLienteDesdeInformes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/cliente" />

                <ImageButton
                    android:id="@+id/botonIrAVentaDedeInformes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/tag" />

                <ImageButton
                    android:id="@+id/botonIrAFacturacionDesdeInformes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/file_document" />

                <ImageButton
                    android:id="@+id/botonIrAComprasDesdeInformes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/cart" />

                <ImageButton
                    android:id="@+id/botonIrAInformesDesdeInformes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/informe" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>