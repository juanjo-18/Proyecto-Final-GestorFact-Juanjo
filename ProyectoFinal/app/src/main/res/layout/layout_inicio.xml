<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principalContenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadInicio">

    <ImageView
        android:id="@+id/imagenFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contenedorPrincipal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:id="@+id/contenedorFacturacion"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="120dp"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    app:flow_horizontalAlign="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tituloFacturacion"
                        style="@style/tituloNegrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/facturacion" />

                    <TextView
                        android:id="@+id/textoFacturas"
                        style="@style/negrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/facturas" />

                    <TextView
                        android:id="@+id/textoNumerosFacturas"
                        style="@style/texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional" />

                    <TextView
                        android:id="@+id/textoFacturasAbono"
                        style="@style/negrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/facAbono" />

                    <TextView
                        android:id="@+id/textoNumeroAbono"
                        style="@style/texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="120dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contenedorFacturacion">

                    <TextView
                        android:id="@+id/tituloVentas"
                        style="@style/tituloNegrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ventas" />

                    <TextView
                        android:id="@+id/textoPresupuesto"
                        style="@style/negrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/presupuestoas" />

                    <TextView
                        android:id="@+id/textoNumeroPresupuestoVenta"
                        style="@style/texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional" />

                    <TextView
                        android:id="@+id/textoPedidos"
                        style="@style/negrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pedidos" />

                    <TextView
                        android:id="@+id/textoNumeroPedidoVenta"
                        style="@style/texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional" />

                    <TextView
                        android:id="@+id/textoAlbaranes"
                        style="@style/negrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/albaranes" />

                    <TextView
                        android:id="@+id/textoNumeroAlbaranVenta"
                        style="@style/texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="120dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <TextView
                        android:id="@+id/tituloCompras"
                        style="@style/tituloNegrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/compras" />

                    <TextView
                        android:id="@+id/textoPedidosCompras"
                        style="@style/negrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pedidos" />

                    <TextView
                        android:id="@+id/textoNumerosFacturas5"
                        style="@style/texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional" />

                    <TextView
                        android:id="@+id/textoAlbaranesCompras"
                        style="@style/negrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/albaranes" />

                    <TextView
                        android:id="@+id/textoNumerosFacturas6"
                        style="@style/texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional" />

                    <TextView
                        android:id="@+id/textoFacturasCompras"
                        style="@style/negrita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/facturas" />

                    <TextView
                        android:id="@+id/textoNumerosFacturas7"
                        style="@style/texto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provisional" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imagenFolio"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="36dp"
                    android:src="@drawable/file_document"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imagenEtiqueta"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginEnd="36dp"
                    android:src="@drawable/tag"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagenFolio" />

                <ImageView
                    android:id="@+id/imagenCarrito"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginEnd="36dp"
                    android:src="@drawable/cart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagenEtiqueta" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <ImageButton
                    android:id="@+id/botonIrAInicioDesdeInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/casa" />

                <ImageButton
                    android:id="@+id/botonIrACatalogoDesdeInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/libro" />

                <ImageButton
                    android:id="@+id/botonIrACLienteDesdeInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/cliente" />

                <ImageButton
                    android:id="@+id/botonIrAVentaDedeInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/tag" />

                <ImageButton
                    android:id="@+id/botonIrAFacturacionDesdeInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/file_document" />

                <ImageButton
                    android:id="@+id/botonIrAComprasDesdeInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/cart" />

                <ImageButton
                    android:id="@+id/botonIrAInformesDesdeInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/informe" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>