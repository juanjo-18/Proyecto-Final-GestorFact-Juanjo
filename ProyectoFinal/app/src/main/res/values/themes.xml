<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoFinal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/salmonPrincipal</item>
        <item name="colorPrimaryVariant">@color/salmonOscuro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde</item>
        <item name="colorSecondaryVariant">@color/verdeOscuro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gris</item>

    </style>

    <style name="textoElementos">
        <item name='android:textSize'>18sp</item>
        <item name='android:textStyle'>bold</item>
    </style>

    <style name="panelEditar" >
        <item name="android:background">@color/azulOscuroTransparente</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="panel" >
        <item name="android:background">@color/azulClaro</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tituloParaEditar" >
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/amarilloTituloDark</item>
    </style>

    <style name="titulo" >
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/verdeOscuro</item>
    </style>

    <style name="tituloNegrita" >
        <item name="android:textAlignment">gravity</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="texto" >
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="negrita" >
        <item name="android:textAlignment">gravity</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subTitulo" >
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/verdeOscuro</item>
    </style>
    <style name="contenedores" >
        <item name="android:textSize">18dp</item>
    </style>
</resources>